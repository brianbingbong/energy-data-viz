{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Energy Usage by Country per Capita",
    "width": 800,
    "height": 600,
    "projection": {
        "type": "equirectangular"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/brianbingbong/energy-data-viz/main/data/world_map.topojson.json",
    "format": {
            "type": "topojson",
            "feature": "custom.geo"
        }
    },
    "transform": [
        {
            "lookup": "properties.name",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/brianbingbong/energy-data-viz/main/data/worldometers_energy.csv"
                },
                "key": "name",
                "fields": [
                    "pc_yearly_btu"
                ]
            }
        },
        {
            "calculate": "datum.pc_yearly_btu + 0.1",
            "as": "Yearly energy per capita (BTU)"
        }
    ],
    "mark": {
        "type": "geoshape"
    },
    "encoding": {
        "color": {
            "field": "Yearly energy per capita (BTU)",
            "type": "quantitative",
            "scale": {
                "type": "log"
            }
        },
        "tooltip": [
            {
                "field": "properties.name",
                "type": "nominal",
                "title": "Country"
            },
            {
                "field": "Yearly energy per capita (BTU)",
                "type": "quantitative",
                "title": "BTUs"
            }
        ]
    }
}